<% provide(:title, "Edit Country") %> 
<h1>Edit Country</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@country) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= render 'fields', f: f %>
      
      <%= f.submit "Save changes", class: "btn btn-primary" %>
      <%= link_to 'List', countries_path, class: "btn" %>
    <% end %>
  </div>
</div>

