        
      <% @countries.each do |country| %>  
        <li>
          <% if current_user.superuser? %>
            <% if country.recent? %>
              <span class="recent"> * </span>
            <% end %>
            <% if country.updated? %>
              <span class="updates"> ^ </span>
            <% end %>
            <% if country.incomplete? %>
              <span class="incomplete"> ! </span>
            <% end %>
          <% end %>
          <%= country.country %> 
          | <%= link_to "settings", country %>
          | <%= link_to "change name", edit_country_path(country) %>
          <%= render "shared/admin_deletes", model_name: country %>
          <% if current_user.administrator?(country.country) %>
            | <span class="updates">YOU'RE AN ADMINISTRATOR</span>
          <% end %>
        </li>
      <% end %>
