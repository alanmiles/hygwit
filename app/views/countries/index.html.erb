<% provide(:title, 'Countries') %>

<div class="row">
  <aside class="span4">
    <section>
      <%= render 'shared/user_sidebar' %>
    </section>
    <section>
      <div class="instruction">
        <div class="line-space"><%= completion %></div>
        <% unless current_user.superuser? %>
          <div><%= assist_as_country_admin %></div>
        <% end %>
      </div>
    </section>
    <section>
      <%= render "shared/superuser_admin_stats" %>
    </section>
  </aside>
  
  <div class="span8">
    <h1 class="align-left">Countries</h1>
    
    <% if current_user.superuser? %>
      <div style="padding-bottom: 10px">
        <%= link_to "Add a country", new_country_path, class: "btn" %>
      </div>
    <% end %>

    <ul class="itemlist">
        <%= render "list" %>
    </ul>
    
    <% if current_user.superuser? %>
      <% if Country.count > 10 %>
        <div style="padding-top: 10px">
          <%= link_to "Add a country", new_country_path, class: "btn" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
