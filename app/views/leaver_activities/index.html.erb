<% provide(:title, "Leaver Actions: #{@business.name}") %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= @business.name %>
      </h1>
    </section>
    <section>
      <div class="instruction">
        <div class="line-space">
          <%= leaveactivity_instruction_1 %>
        </div>
        <div class="line-space">
          <%= leaveactivity_instruction_2 %>
        </div>
        <div class="line-space">
          <%= leaveactivity_instruction_3 %>
        </div>
      </div>
    </section>
  </aside>
  
  <div class="span8">
    <h1 class="align-left">Leaver Actions</h1>
    
    <div style="padding-bottom: 10px">
      <%= link_to "Add a leaver action", new_business_leaver_activity_path(@business), class: "btn" %>
      <%= link_to "Back to Business Settings Menu", @business, class: "btn" %>
    </div>
    <ul id="leaveactivities" class="itemlist" data-update-url="<%= sort_business_leaver_activities_url(@business) %>">
      <%= render "list" %>
    </ul>
  </div>
</div>
