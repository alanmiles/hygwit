      <% if current_user.superuser? || current_user.administrator?(@country.country) %>
        <div id="recent-adds">
           <% if @recent_adds > 0 %>
             <%= pluralize(@recent_adds, 'addition') %> (*) in past 7 days.
           <% else %>
             No recent additions.
           <% end %>
        </div>
        <div id="recent-updates">
          <% if @recent_updates > 0 %>
            <%= pluralize(@recent_updates, 'update') %> (^) in past 7 days.
          <% else %>
            No recent updates.
          <% end %>
        </div>
      <% end %>
