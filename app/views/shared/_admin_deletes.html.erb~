            <% if current_user.superuser? %>
              | <%= link_to "delete", nationality, method: :delete,
                             data: { confirm: "Delete '#{nationality.self_ref}'?  Sure?" } %>
            <% elsif current_user.admin? %>
              <% if nationality.created_by == current_user.id %>
                | <%= link_to "delete", nationality, method: :delete,
                             data: { confirm: "Delete '#{nationality.self_ref}'?  Sure?" } %>
              <% end %>
            <% end %>
