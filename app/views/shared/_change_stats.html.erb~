      <% if current_user.administrator?(@country.country) %>
        <div id="recent-adds">
           <% if @recent_adds > 0 %>
             <%= pluralize(@recent_adds, 'addition') %> (*) in past 7 days.
           <% else %>
             No recent additions.
           <% end %>
        </div>
        <div id="recent-updates">
          <% if @recent_updates > 0 %>
            <%= pluralize(@recent_updates, 'update') %> (^) in past 7 days.
          <% else %>
            No recent updates.
          <% end %>
        </div>
      <% elsif current_user.superuser? %>
        <div id="recent-add-checks">
          <% if @recent_add_checks > 0 %>
            <%= pluralize(@recent_add_checks, 'addition') %> (A) to be checked.
          <% else %>
            No additions to be checked.
          <% end %>
        </div>
        <div id="recent-update-checks">
          <% if @recent_update_checks > 0 %>
            <%= pluralize(@recent_update_checks, 'update') %> (U) to be checked.
          <% else %>
            No updates to be checked.
          <% end %>
        </div>
      <% end %>
