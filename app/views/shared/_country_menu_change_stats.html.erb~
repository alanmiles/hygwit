        <% if current_user.superuser? %>
          <% if model_name.recent_add_checks(@country) > 0 %>
            <%= pluralize(model_name.recent_add_checks(@country), 'addition') %> (+) to be checked.
          <% else %>
            No additions to be checked.
          <% end %>
          <% if model_name.recent_update_checks(@country) > 0 %>
            <%= pluralize(model_name.recent_update_checks(@country), 'update') %> (>) to be checked.
          <% else %>
            No updates to be checked.
          <% end %>   
        <% elsif current_user.administrator?(@country.country) %>
          <% if model_name.total_recent(@country) > 0 %>
            <%= pluralize(model_name.total_recent(@country), 'addition') %> (*) in past 7 days.
          <% else %>
            No recent additions.
          <% end %>
          <% if model_name.total_updated(@country) > 0 %>
            <%= pluralize(model_name.total_updated(@country), 'update') %> (^) in past 7 days.
          <% else %>
            No recent updates.
          <% end %>
        <% end %>
