<% provide(:title, "Insurance Codes: #{@country.country}") %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= @country.country %>
      </h1>
    </section>
    <section>
      <div class="instruction">
        <%= render "instructions" %>  
      </div>
    </section>
    <section>
      <%= render "shared/change_stats" %>
    </section>
  </aside>
  
  <div class="span8">
    <h1 class="align-left">Insurance Codes</h1>

    <div style="padding-bottom: 10px">
      <% if current_user.superuser? || current_user.administrator?(@country.country) %>
        <%= link_to "Add a new code", new_country_insurance_code_path(@country), class: "btn" %>
      <% end %>
      <%= link_to "Back to main insurance menu", insurance_menu_country_path(@country), class: "btn" %>
    </div>
    <ul class="itemlist">
      <%= render "list" %>
    </ul>
  </div>
</div>
