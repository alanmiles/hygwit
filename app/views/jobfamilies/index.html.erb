<% provide(:title, 'Job Families') %>
<div class="row">
  <aside class="span4">
    <section>
      <%= render 'shared/user_sidebar' %>
    </section>
  </aside>
  
  <div class="span8">
    <h1 class="align-left">Job Families</h1>

    <div style="padding-bottom: 10px">
      <%= link_to "Add a job family", new_jobfamily_path, class: "btn" %>
    </div>
    <ul class="itemlist">
      <% @jobfamilies.each do |jobfamily| %>
        <li>
          <%= jobfamily.job_family %>
          | <%= link_to "change", edit_jobfamily_path(jobfamily) %>
          | <%= link_to "delete", jobfamily, method: :delete,
                             data: { confirm: "Delete '#{jobfamily.job_family}'?  Sure?" } %>
    
        </li>
      <% end %>
    </ul>
    <% if Jobfamily.count > 10 %>
      <div style="padding-top: 10px">
        <%= link_to "Add a job family", new_jobfamily_path, class: "btn" %>
      </div>
    <% end %>
  </div>
</div>
