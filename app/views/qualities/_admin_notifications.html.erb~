          <% if current_user.superuser? %> 
            <% if quality.add_check? %>
              <span class="recent"> + </span>
            <% end %>
            <% if quality.update_check? %>
              <span class="updates"> > </span>
            <% end %>
            <% if quality.descriptors.includes_updates? %>
              <span class="updates"> & </span>
            <% end %>
            <% if quality.descriptors.requires_writing? %>
              <span class="updates"> ~ </span>
            <% end %>
            
          
          <% elsif current_user.admin? %>
            <% if quality.recent? %>
              <span class="recent"> * </span>
            <% end %>
            <% if quality.updated? %>
              <span class="updates"> ^ </span>
            <% end %>
            <% if quality.descriptors.includes_updates? %>
              <span class="updates"> & </span>
            <% end %>
            <% if quality.descriptors.requires_writing? %>
              <span class="updates"> ~ </span>
            <% end %>
          <% end %>
