      <li class="list-header">
        <span class="span3">Department</span>
        <span class="span1">Code</span>
        <span class="span3">Division</span>
      </li>
      
      <% @departments.each do |department| %>
        <li>
          <span class="span3"><%= department.department %></span>
          <span class="span1"><%= department.dept_code %></span>
          <span class="span3">
          
          <% if department.division_id.nil? %>
            <span class="span3">
              &nbsp;
          <% else %>
            <% if department.division.current? %>
              <span class="span3">
            <% else %>
              <span class="span3 standout">
            <% end %>
                <%= department.division.division %>
             
          <% end %>
          </span>
          | <%= link_to "edit", edit_department_path(department) %>
          <% unless department.has_jobs? %>
            | <%= link_to "del", department, method: :delete,
                       data: { confirm: "Delete '#{department.department}'. Are you sure?" } %>
          <% end %>
        </li>
      <% end %>
