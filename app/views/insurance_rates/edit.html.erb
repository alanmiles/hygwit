<% provide(:title, "Edit Insurance Rate") %> 
<div class="row">
  <aside class="span3">
    <section>
      <h1 class="line-space">
        <%= @country.country %>
      </h1>
      <div class="instruction">
        <div class="line-space">
          <%= insurance_rates_edit_instruction_1 %>
        </div>
        <div>
          <%= insurance_rates_edit_instruction_2 %>
        </div>  
      </div>
    </section>
  </aside>
  <div class="span6 offset0">
    <h1>Edit Insurance Rate</h1>
    <%= form_for(@rate) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= render 'edit_fields', f: f %>
      <%= f.submit "Save changes", class: "btn btn-primary" %>
      <%= link_to "All rates", country_insurance_rates_path(@country), class: "btn" %>
      <%= link_to "Main insurance menu", insurance_menu_country_path(@country), class: "btn" %>
    <% end %>
  </div>
</div>
