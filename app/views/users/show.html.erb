<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <% if @user.admin? %>
      <div class="instruction">
        <div class="line-space">
          <%= admin_notes_1 %>
        </div>
        <div class="line-space">
          <%= admin_notes_2 %>
        </div>     
      </div>
    <% end %>
  </aside>
  
  <div class="span8">
    <%= render 'administrator_menu' if @user.admin? %>
  </div>
</div>

