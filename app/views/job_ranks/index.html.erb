<% provide(:title, 'Job Ranks') %>

<div class="row">  
  <aside class="span4">
    <section>
      <h1>
        <%= @business.name %>
      </h1>
    </section>
    <section>
      <div class="instruction">
        <div class="line-space">
          <%= jobrank_instruction_1 %>
        </div> 
        <div class="line-space">
          <%= jobrank_instruction_2 %>
        </div> 
        <div class>
          <%= jobrank_instruction_3 %>
        </div> 
      </div>
    </section>
  </aside>
  
  <div class="span8">
    <h1 class="align-left">Job Ranks</h1>

    <div style="padding-bottom: 10px">
      <%= link_to "Add a rank", new_business_job_rank_path(@business), class: "btn" %>
      <%= link_to "Back to Business Settings Menu", @business, class: "btn" %>
    </div>
    <ul id="rankcats" class="itemlist" data-update-url="<%= sort_business_job_ranks_url(@business) %>">
      <%= render "list" %>
    </ul>
    
  </div>
</div>
