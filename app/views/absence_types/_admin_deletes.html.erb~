            <% if current_user.superuser? %>
              | <%= link_to "delete", absence, method: :delete,
                             data: { confirm: "Delete '#{absence.self_ref}'?  Sure?" } %>
            <% elsif current_user.admin? %>
              <% if absence.created_by == current_user.id %>
                | <%= link_to "del", absence, method: :delete,
                             data: { confirm: "Delete '#{absence.self_ref}'?  Sure?" } %>
              <% end %>
            <% end %>
