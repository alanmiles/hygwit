<% provide(:title, "Absence Type: #{@absence.absence_code}") %>
<h1>Absence Type: <%= @absence.absence_code %></h1>
<div class="row">
  <div class="span6 offset3">
    <div class="line-space">
      <%= @absence.notes %>
    </div>
    <div class="line-space">
      Amount paid
      <%= @absence.paid %>% 
    </div>
    <div class="line-space">
      Sickness absence?
      <% if @absence.sickness? %>
        Yes
      <% else %>
        No
      <% end %>
    </div>
    <div class="line-space">
      Max days/year
      <%= @absence.maximum_days_year %>
    </div>
    <div class="line-space">
      Documentation required?
      <% if @absence.documentation_required? %>
        Yes
      <% else %>
        No
      <% end %>
    </div>
    <%= link_to "Edit", edit_absence_type_path(@absence), class: "btn" %>
    <%= link_to "Absence-type list", absence_types_path, class: "btn" %>  
  </div>
</div>
