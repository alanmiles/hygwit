<% provide(:title, 'New Salary Threshold') %>
<div class="row">
  <aside class="span3">
    <section>
      <h1 class="line-space">
        <%= @country.country %>
      </h1>
      <div class="instruction">
        <div>
          <%= insurance_settings_country_guidance %>
        </div> 
      </div>
    </section>
  </aside>
  <div class="span6 offset0">
    <h1>New Salary Threshold</h1>
    <%= form_for([@country, @setting]) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="line-space"><em>No blanks! All boxes below must be filled before your entry can be saved.</em></div>
      <%= render 'fields', f: f %>
      <%= f.submit "Create", class: "btn btn-primary" %>
      <%= link_to "Salary thresholds table", country_insurance_settings_path(@country), class: "btn" %>
      <%= link_to "Main insurance menu", insurance_menu_country_path(@country), class: "btn" %>
    <% end %>
  </div>
</div>
