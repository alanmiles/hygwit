  <aside class="span4">
    <section>
      <%= render 'shared/user_sidebar' %>
    </section>
    <section>
      <% if current_user.superuser? %>
        <%= render "stats" %>
      <% end %>
    </section>
  </aside>
  
  <div class="span8">
    <h1 class="align-left">Contract Types</h1>

    <div style="padding-bottom: 10px">
      <%= link_to "Add a contract", new_contract_path, class: "btn" %>
    </div>
    <ul class="itemlist">
      <%= render "list" %>
    </ul>
    
  </div>
</div>
