     <% @currencies.each do |currency| %>
        <li>
          <% if current_user.superuser? %>
            <% if currency.recent? %>
              <span class="recent"> * </span>
            <% end %>
            <% if currency.updated? %>
              <span class="updates"> ^ </span>
            <% end %>
          <% end %>
          <%= currency.code %>:
          <%= currency.currency %>
          <% unless currency.decimal_places == 2 %>
            <i>(<%= currency.decimal_places %> decimal places)</i>
          <% end %>
          | <%= link_to "change", edit_currency_path(currency) %>
          <% unless currency.linked? %>
            <%= render "shared/admin_deletes", model_name: currency %>
          <% end %>
        </li>
      <% end %>
