        <li>
          <%= reason.reason %>
          <% if reason.full_benefits? %>
            | Full leaving benefits
          <% end %>
          | <%= link_to "change", edit_leaving_reason_path(reason) %>
          | <%= link_to "delete", reason, method: :delete,
                             data: { confirm: "Delete '#{reason.reason}'?  Sure?" } %>
    
        </li>
      <% end %>
