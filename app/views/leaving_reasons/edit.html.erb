<% provide(:title, "Edit Leaving Reason") %> 
<h1>Edit Leaving Reason</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@leaving_reason) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= render 'fields', f: f %>
      
      <%= f.submit "Save changes", class: "btn btn-primary" %>
      <%= link_to 'Back', leaving_reasons_path, class: "btn" %>
    <% end %>
  </div>
</div>

