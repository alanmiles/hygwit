<% provide(:title, "Edit Loan Type") %> 
<h1>Edit Loan Type</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@loan) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= render 'fields', f: f %>
      
      <%= f.submit "Save change", class: "btn btn-primary" %>
      <%= link_to 'Back', loan_types_path, class: "btn" if current_user.admin? %>
    <% end %>
  </div>
</div>
