<% provide(:title, 'New Gratuity Rule') %>
<div class="row">
  <aside class="span3">
    <section>
      <h1 class="line-space">
        <%= @country.country %>
      </h1>
      <div class="instruction">
        <div>
          <%= gratuity_country_guidance %>
        </div> 
      </div>
    </section>
  </aside>
  <div class="span6 offset0">
    <h1>New Gratuity Rule</h1>
    <%= form_for([@country, @formula]) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= render 'fields', f: f %>
      <%= f.submit "Create", class: "btn btn-primary" %>
      <%= link_to "Full gratuity table", country_gratuity_formulas_path(@country), class: "btn" %>
      <%= link_to "Country set-up page", @country, class: "btn" %>
    <% end %>
  </div>
</div>
