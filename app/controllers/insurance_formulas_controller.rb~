class InsuranceFormulasController < ApplicationController
  
  before_filter :check_admin
  before_filter :signed_in_user, except: [:update, :create, :destroy]
  before_filter :illegal_action, only: [:update, :create, :destroy]
  
  def index
    @country = Country.find(params[:country_id])
    check_permitted
    @formulas = @country.insurance_formulas.all
    @recent_adds = InsuranceFormula.total_recent(@country)
    @recent_updates = InsuranceFormula.total_updated(@country)
  end
  
  def new
    @country = Country.find(params[:country_id]) 
    country_admin_access
    check_permitted
    @formula = @country.insurance_formulas.new
  end
  
  def create
    @country = Country.find(params[:country_id])
    check_permitted
    if current_user.superuser? || current_user.administrator?(@country.country)
      @formula = @country.insurance_formulas.new(params[:insurance_formula])
      if @formula.save
        flash[:success] = "Social insurance table for #{@country.country} has been updated."
        redirect_to country_insurance_formulas_path(@country)
      else
        render 'new'
      end
    else
      flash[:notice] = "You must be a registered administrator for #{@country.country}."
      redirect_to user_path(current_user) 
    end
  end

  def edit
    @formula = InsuranceFormula.find(params[:id])
    @country = Country.find(@formula.country_id)
    country_admin_access
  end
  
  def update
    @formula = InsuranceFormula.find(params[:id])
    @country = Country.find(@formula.country_id)
    if current_user.superuser? || current_user.administrator?(@country.country)
      if @formula.update_attributes(params[:insurance_formula])
        flash[:success] = "Social insurance table for #{@country.country} has been updated."
        redirect_to country_insurance_formulas_path(@country)
      else
        render 'edit'
      end
    else
      flash[:notice] = "You must be a registered administrator for #{@country.country} to make changes."
      redirect_to user_path(current_user)
    end
  end
  
  def destroy
    @formula = InsuranceFormula.find(params[:id])
    @country = Country.find(@formula.country_id)
    if current_user.superuser? || current_user.administrator?(@country.country)
      @formula.destroy
      flash[:success] = "Line in the social insurance table for #{@country.country} destroyed."
      redirect_to country_insurance_formulas_path(@country)
    else
      flash[:notice] = "You must be a registered administrator for #{@country.country} to make changes."
      redirect_to user_path(current_user)
    end
  end
  
  private
  
    def country_admin_access
      if signed_in?
        unless current_user.superuser?
          admin_check = CountryAdmin.find_by_user_id_and_country_id(current_user.id, @country.id)
          if admin_check.nil?
            flash[:notice] = "You must be a registered administrator for #{@country.country} to make changes."
            redirect_to user_path(current_user)
          end
        end
      end
    end
    
    def check_permitted
      unless @country.insurance_applies?
        flash[:notice] = "Social insurance is switched off for this country"
        redirect_to user_path(current_user)
      end
    end
end
